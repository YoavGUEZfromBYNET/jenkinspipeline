pipeline {
	agent any
	stages{
		stage('Build'){
			steps {
				sh 'mvn clean package'
			}
			post {
				success {
					echo 'Now Archiving...'
					archiveArtifacts artifacts:  '**/target/*.war'
				}
			}
		}
		stage('Deployments'){
			parallel{
				stage ('Deploy to Stagging'){
					steps {
						sh 'cp /opt/tomcat/.jenkins/workspace/PipelineAsCodeExample/webapp/target/webapp.war /opt/tomcat/latest/webapps'
					}
				}
			}
		}
	}
}
